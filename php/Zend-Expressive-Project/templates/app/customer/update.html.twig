{% extends '@layout/default.html.twig' %}

{% block title %}Cadastro de Contatos - {{ parent }}{% endblock %}

{% block page_header %}Cadastro de Contatos{% endblock %}

{% block content %}
	{% set name = form.get('name') %}
	{% do name.setAttribute('class', 'form-control') %}

	{% set email = form.get('email') %}
	{% do email.setAttribute('class', 'form-control') %}

	{% set submit = form.get('submit') %}
	{% do submit.setAttribute('class', 'btn btn-primary').setLabel('Editar') %}

	{% do form.setAttribute('action', url('customer.update', {id: form.getObject().id})) %}
	{% do form.prepare() %}

	<div class="row">
		<div class="col-md-8">
			<div class="box box-primary">
				<div class="box-body">
					{{ form().openTag(form) | raw }}
					{{ formHidden(form.get('_method')) }}
						<div class="box-body">
							<div class="form-group">
								{{ formRow(name) }}
							</div>
							<div class="form-group">
								{{ formRow(email) }}
							</div>
						</div>
						<div class="box-footer">
							{{ formButton(submit) }}
						</div>
					{{ form().closeTag() | raw }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
