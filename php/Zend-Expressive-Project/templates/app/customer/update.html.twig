{% extends '@layout/default.html.twig' %}

{% block title %}Cadastro de Contatos - {{ parent }}{% endblock %}

{% block page_header %}Cadastro de Contatos{% endblock %}

{% block content %}
	{% include '@app/customer/_form-elements.html.twig' %}

	{% set submit = form.get('submit') %}
	{% do submit.setAttribute('class', 'btn btn-primary').setLabel('Editar') %}

	{% do form.setAttribute('action', url('customer.update', {id: form.getObject().id})) %}
	{% do form.prepare() %}

	<div class="row">
		<div class="col-md-8">
			<div class="box box-primary">
				<div class="box-body">
					{{ form().openTag(form) | raw }}
					{{ formHidden(form.get('_method')) }}
						{% include '@app/customer/_form-body.html.twig' %}
						<div class="box-footer">
							{{ formButton(submit) }}
						</div>
					{{ form().closeTag() | raw }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
