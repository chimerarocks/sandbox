{% extends '@layout/default.html.twig' %}

{% block title %}Cadastro de Contatos - {{ parent }}{% endblock %}

{% block page_header %}Cadastro de Contatos{% endblock %}

{% block content %}
	<div class="row">
		<div class="col-md-8">
			<div class="box box-danger">
				<div class="box-body">
					<form name="form_disabled" role="form" method="post">
						<input type="hidden" name="_method" value="PUT">
						<fieldset disabled>
							<div class="box-body">
								<div class="form-group">
									<label for="name">Nome:</label>
									<input type="text" class="form-control" name="name" value="{{ customer.name }}" >
								</div>
								<div class="form-group">
									<label for="email">Email:</label>
									<input type="email" class="form-control" name="email" value="{{ customer.email }}" required="required" >
								</div>
							</div>
						</fieldset>
					</form>
					<form name="form" method="post" action="{{ url('customer.delete', {'id': customer.id}) }}">
						<div class="box-footer">
							<button class="btn btn-danger" type="submit">Excluir</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
